<!-- Origin -->
<div class="origin_input col-sm-6 my-col-md-7">
	<span class="glyphicon glyphicon-map-marker"></span>
	<%= f.input :origin_id,:label => false, placeholder:"Select start city",  input_html: {class: "form-control"} %>					
	<div class=" cycle autocomplete_mode" style="border:0;">
	<%= f.select :origin_cycle, (5..50).step(5).map{|s| ["#{s} KM", s]}%>
	<span class="glyphicon glyphicon-chevron-down"></span>

	</div>
</div>

<!-- Destination -->
<div class=" destination_input col-sm-6 my-col-md-7">
	<span class="glyphicon glyphicon-map-marker"></span>
	<%= f.input :destination_id,:label => false, placeholder: "Select your destination", input_html: {class: "form-control"} %>
	<div class=" cycle autocomplete_mode"  style="border:0;">
	<%= f.select :destination_cycle, (5..50).step(5).map{|s| ["KM #{s}", s]}%> 
	<span class="glyphicon glyphicon-chevron-down"></span>

	</div>
</div>

<!-- Hidden fields -->
<%= f.hidden_field :origin_lat %>
<%= f.hidden_field :origin_lng %>
<%= f.hidden_field :destination_lat %>
<%= f.hidden_field :destination_lng %>		