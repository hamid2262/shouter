<%= form_for :search_subtrip, url: search_search_subtrips_path, method: :get do |f| %>
	
	<%= f.text_field :origin_id, placeholder: "Origin" %>
	<%= f.select :origin_cycle, (0..50).step(5).map{|s| ["#{s} Km", s]}%>
	<%= f.hidden_field :origin_lat %>
	<%= f.hidden_field :origin_lng %>

	<%= f.text_field :destination_id, placeholder:"Destination" %>
	<%= f.select :destination_cycle, (0..50).step(5).map{|s| ["#{s} Km", s]}%> 
	<%= f.hidden_field :destination_lat %>
	<%= f.hidden_field :destination_lng %>
	
	<%= text_field_tag :date, Date.today, class: "datepicker" %>
	
	<%= f.submit "Search" %>
<% end %>