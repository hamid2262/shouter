<%= render 'search_form' %>
<% if @search_subtrip.subtrips(3).any? %>
	<table class="table table-hover">
		<thead>
			<tr>
				<th>From</th>
				<th>To</th>
				<th>At</th>
				<th>Price</th>
				<th>Driver</th>
			</tr>
		</thead>
		<tbody>
			<% @search_subtrip.subtrips(3).each do |s| %>
					<%= render partial: 'subtrip', locals:{s: s} %>
			 <% end %>	
		 </tbody>
		</table>
<% else %>
	<p>No record with this condition. please try again.</p>
<% end %>



