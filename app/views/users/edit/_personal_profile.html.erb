	<%= simple_form_for(resource, 
		as: resource_name, 
		url: registration_path(resource_name), 
		html: { method: :put, class: 'form-horizontal' },
	 	defaults: { 
	 		wrapper_html: {
	 			class: 'form-group'
	 		}, 
	 		input_html: { 	class: 'form-control col-sm-8' 	},
	 		label_html: { class: 'col-sm-3' }
	 	}			) do |f| %>

			<h3>Personal Detail</h3>
			<%= f.input :gender, collection: [['Male','m'],['Female','f']], prompt: "Select Gender" %>
			<%= f.input :username %>
			<%= f.input :firstname %>
			<%= f.input :lastname %>
			<%= f.input :slug %>
			<%= f.input :age, collection: 13..90 %>
			<% if current_user.is_admin? %>
			  <%= f.label :admin, "Admin" %>
			  <%= f.check_box :admin %>  
			<% end %>
			<%= f.input :avatar, as: :file %>
			<%= f.input :cover, as: :file %>

			<%= f.hidden_field :tab, value: "personal_profile" %>	
			
			<%= f.button :submit, {class: ' btn-primary col-sm-offset-3'} %>
  
	<% end %>