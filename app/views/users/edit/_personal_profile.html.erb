	<%= simple_form_for(resource, 
		as: resource_name, 
		url: registration_path(resource_name), 
		html: { method: :put, class: 'form-horizontal' },
	 	defaults: { 
	 		wrapper_html: {
	 			class: 'form-group'
	 		}, 
	 		input_html: { 	class: 'form-control col-sm-8' 	},
	 		label_html: { class: 'col-sm-3' }
	 	}			) do |f| %>

			<%#= f.input :gender, collection: [[t('gender.male'),'m'],[t('gender.female'),'f']], prompt: "Select Gender" %>
			<%#= f.input :username %>
			<%= f.input :firstname %>
			<%= f.input :lastname %>
			<%= user_form_control_static  User.human_attribute_name("gender"), t_gender(@user.gender) %>
			<%= f.input :age, collection: 13..90 %>
			<% if current_user.is_admin? %>
			  <%= f.label :admin, "Admin" %>
			  <%= f.check_box :admin %>  
			<% end %>
			<%= f.input :avatar, as: :file %>
			<%= f.input :cover, as: :file %>

			<%= f.hidden_field :tab, value: "personal_profile" %>	

			<%= f.button :submit, :disable_with => t('.please wait'), class: 'btn btn-primary col-sm-offset-3 please_wait' %>
  
	<% end %>