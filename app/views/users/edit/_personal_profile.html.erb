	<%= simple_form_for(resource, 
		as: resource_name, 
		url: registration_path(resource_name), 
		html: { method: :put, class: 'form-horizontal' },
	 	defaults: { 
	 		wrapper_html: {
	 			class: 'form-group'
	 		}, 
	 		input_html: {class: 'form-control '}
	 	}			) do |f| %>

			<%#= f.input :gender, collection: [[t('gender.male'),'m'],[t('gender.female'),'f']], prompt: "Select Gender" %>
		<div class="col-sm-3">
			<%= f.label :firstname, t("firstname") %>
		</div>
		<div class="col-sm-8">
			<%= f.input :firstname, label: false %>
		</div>

		<div class="col-sm-3">
			<%= f.label :lastname, t("lastname") %>
		</div>
		<div class="col-sm-8">
			<%= f.input :lastname, label: false %>
		</div>

		<div class="col-sm-3">
			<%= f.label :age, t("age") %>
		</div>
		<div class="col-sm-8">
			<%= f.input :age, label: false, collection: 13..90 %>
		</div>
	
		<div class="col-sm-3">
			<%= f.label :details, t("details") %>
		</div>
		<div class="col-sm-8">
			<%= f.input :details, label: false, as: :text, input_html: {rows: 4} %>
		</div>
	
		<% if current_user.is_admin? %>
			<div class="col-sm-3">
				<%= f.label :admin, "Admin" %>
			</div>
			<div class="col-sm-8">
			  <%= f.check_box :admin %>  
			</div>
		<% end %>
		<%= f.hidden_field :tab, value: "personal_profile" %>	

		<%= f.button :submit, :disable_with => t('.please wait'), class: 'btn btn-primary col-sm-offset-3 please_wait' %>
	<% end %>