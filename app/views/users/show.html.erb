<h2><%= @user.name %>'s profile</h2>

<% if current_user.can_follow? @user %>
	<%= follow_button @user %>
<% end %>

<%= render @shouts %>
<hr>
<h2>User Profile</h2>

<%= render 'single' %>

<hr>
<h2>Car detail</h2>
<% if @user.vehicle.present? %>
	<%= render 'vehicles/show' %>	
<% else %>
	<p><%= link_to "Enter your car details", new_user_vehicles_path(@user) %></p>
<% end %>
