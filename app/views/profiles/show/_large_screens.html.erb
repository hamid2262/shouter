<!-- --       Larg Screen      -- -->
<div id="sidebar" class="col-lg-4">
  <%= render partial: 'profiles/show/avatar_and_brief_for_large_screen', locals: {user: user}  %>

	<%= render partial: 'profiles/show/user_overview', locals: {user: user}  %>

	<%= render partial: 'profiles/show/single_profile', locals: {user: user}  %>
	<%= render partial: 'vehicles/show', locals: {user: user} %>
	<% if current_user %>
		<%= render partial: 'shared/users_list', locals: {users: @followed_users, title: "#{t 'followed_users'}  #{@profile.user.name } "} %>
	<% end %>
</div>
<div id="leftContent" class="col-lg-8">
	<%= render partial: 'profiles/show/cover', locals: {user:user} %>
	<%= flash_creator flash %>

  <div class="users-list panel panel-default">
	  <div class="panel-heading">
			<%= t 'posts' %>
	  </div>
	  <div class="panel-body">
			<%= render @profile.timeline %>
		</div>
	</div>

</div>
