<%= simple_form_for @page, 
  html: { class: 'form-' },
  defaults: { 
	  wrapper_html: { class: 'form-group' }, 
	  input_html:   { class: 'form-control ' },
	  label_html:   { class: 'c' }
  } do |f| %>

  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :permalink %>
    <%= f.input :content, as: :ckeditor, :input_html => {:cols => 50, :rows => 50, ckeditor: {toolbar: 'Full'} } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
