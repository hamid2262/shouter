<% @page_title = t('.page_title') %>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name) ) do |f| %>

	<h4 class="form-sign-in-up-heading"><%= t('.sign_in_title') %></h4>

  <div class=" col-xs-12">
  <%= f.email_field :email, :autofocus => true, :required => true, placeholder: t(".email"), class: "form-control input-lg" %>
  </div>

  <div class=" col-xs-12">
    <%= f.password_field :password, placeholder: t(".password"), class: "form-control input-lg"%>
  </div>

  <div class=" col-xs-12">
    <% if devise_mapping.rememberable? -%>
    	<label class="checkbox">
        <%= f.label :remember_me  do %>
  	     <%= f.check_box :remember_me %> 
        <% end %>
  	   <%=  t('.remember_me') %>
      </label>
    <% end -%>
  </div>
  <!-- <div class="row"> -->
  <div class="col-xs-12">
    <%= f.submit t(".submit"), class: "btn btn-warning btn-lg btn-block" %>
  </div>
  <!-- </div> -->
  <div class="col-xs-12">
    <%= link_to t('.forget_password'), new_password_path(resource_name), class: "btn btn-link" %>
    <%= link_to t('.sign_up'), new_registration_path(resource_name), class: "btn btn-link pull-#{lang_other_side} " %>
  </div>

<% end %>