<% @page_title = t('.page_title') %>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: "form-sign-in-up"} ) do |f| %>

	<h4 class="form-sign-in-up-heading"><%= t('.sign_in_title') %></h4>

  <%= f.email_field :email, :autofocus => true, :required => true, placeholder: t(".email"), class: "form-control" %>
  <%= f.password_field :password, placeholder: t(".password"), class: "form-control"%>
  		
  <% if devise_mapping.rememberable? -%>
  	<label class="checkbox">
      <%= f.label :remember_me  do %>
	     <%= f.check_box :remember_me %> 
      <% end %>
	   <%=  t('.remember_me') %>
    </label>
  <% end -%>
  <%= f.submit t(".submit"), class: "btn btn-lg btn-primary btn-block" %>
  <%= link_to t('.sign_up'), new_registration_path(resource_name) %>
  <%= link_to t('.forget_password'), new_password_path(resource_name), class: "btn btn-link" %>

<% end %>

