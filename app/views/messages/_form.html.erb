<%= simple_form_for( [@contact, @message], html: {id: "message_form", class: "" }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :body, label: false, input_html: { class: 'form-control required', rows: "3" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t("send"), { class: "btn btn-primary pull-#{lang_other_side}" } %>
  </div>
<% end %>
