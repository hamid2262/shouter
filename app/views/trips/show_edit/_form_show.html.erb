<div class="panel-body subtrips_edit_field">
  <%= simple_form_for(@trip,
    html: { method: :put, class: 'form-horizontal' } ) do |f| %>

    <%= render 'trips/show_edit/subtrips_header' %>

    <%= f.simple_fields_for :subtrips do |b| %>
        <% next if b.object.olat == b.object.dlat %>
      	<%= render 'trips/show_edit/subtrip_fields_show', f: b %>
    <% end %>
    
    <hr>
    
    <div class="form-group">
      <%= f.label :total_available_seats, class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <strong><%= f.object.total_available_seats %></strong> 
      </div>
    </div>

    <div class="form-group">
      <%= f.label :detail,class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <strong><%= f.object.detail %></strong>
      </div>
    </div> 
  <% end %>  <!-- simple_form_for -->
</div>
