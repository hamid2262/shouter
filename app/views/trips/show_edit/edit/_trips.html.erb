<table id="trips" class="table table-hover">
	<thead>
		<th><%= t "mydate" %></th>
		<th><%= t "day" %></th>
		<th><%= t "at" %></th>
		<th><%= t "from" %></th>
		<th><%= t "to"  %></th>
		<th><%= t "price"   %></th>
	</thead>
	<tbody>
	  <% @trips.each do |trip| %>
	    <% trip.subtrips.each do |subtrip| %>
	      <% next if subtrip.origin.downcase == subtrip.destination.downcase %>
	      <%= render 'trips/show_edit/edit/trips_rows', subtrip: subtrip %>
	    <% end %>        
	  <% end %>
	</tbody>
</table	>	