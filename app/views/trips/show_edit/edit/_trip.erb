<table id="trip" class="table table-hover">
	<thead>
		<th><%= t "mydate" %></th>
		<th><%= t "day" %></th>
		<th><%= t "at" %></th>
		<th><%= t "from" %></th>
		<th><%= t "to"  %></th>
		<th><%= t "price"   %></th>
	</thead>
	<tbody>
 		<%= f.simple_fields_for :subtrips do |b| %>
      <% next if b.object.origin.downcase == b.object.destination.downcase %>
      <%= render 'trips/show_edit/edit/trip_rows', f: b  %>
	  <% end %>
	</tbody>
</table	>	