<h1>Listing trips</h1>

<table>
  <thead>
    <tr>
      <th>Total available seats</th>
      <th>Detail</th>
      <th>Driver</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.total_available_seats %></td>
        <td><%= trip.detail %></td>
        <td><%= trip.driver.name %></td>
        <td><%= link_to 'Show', trip %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
        <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

