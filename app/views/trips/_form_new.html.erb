<%= DateTime.now.year %>

<%= simple_form_for(@trip) do |f| %>
  <%= f.error_notification %>
  Total seats: <%= f.select :total_available_seats, 1..@vehicle_seats, selected: @vehicle_seats %> <br>

  
  Departure Time: 
    <%= time_select :first_sub, :date_time %>
    <%= select :first_sub, :jalali_minute, options_for_minute, {:include_blank => true}, class: 'required' %> : 
    <%= select :first_sub, :jalali_hour, options_for_hour, {:include_blank => true} %>

    <hr>
  Departure date: 
  
    <%= select :first_sub, :jalali_year, options_for_year %>
    <%= select :first_sub, :jalali_month, options_for_month %>
    <%= select :first_sub, :jalali_day, options_for_day %>

    <%= date_select :first_sub, :date_time %>  <br>
  Origin: 
    <%= collection_select :first_sub, :origin_id, City.all, :id, :name %><br>

  <%= f.simple_fields_for :subtrips do |builder| %>
  	<fieldset> <hr>
    	<%= render 'subtrip_fields', f: builder %>
    </fieldset>
  <% end %>
  <%= link_to_add_fields "Add Subtrip", f, :subtrips %> <br>

  Destination: 
    <%= collection_select :first_sub, :destination_id, City.all, :id, :name %><br>

  <%= f.input :detail %>
  <%= f.button :submit %>
<% end %>
