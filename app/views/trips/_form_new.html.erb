<%= simple_form_for(@trip) do |f| %>
  <%= f.error_notification %>
  Total seats: <%= f.select :total_available_seats, 1..@vehicle_seats, selected: @vehicle_seats %> <br>

  
  Departure Date and Time: <br>
    <%= select :first_sub, :jminute, options_for_minute, {:include_blank => true}  %> : 
    <%= select :first_sub, :jhour, options_for_hour, {:include_blank => true}  %>
    at:
    <%= select :first_sub, :jday, options_for_day %> 
    <%= select :first_sub, :jmonth, options_for_month %>
    <%= select :first_sub, :jyear, options_for_year %> 
    <br>
  From: 
    <%= collection_select :first_sub, :origin_id, City.all, :id, :name %><br>

  <%= f.simple_fields_for :subtrips do |builder| %>
  	<fieldset> <hr>
    	<%= render 'subtrip_fields', f: builder %>
    </fieldset>
  <% end %>
  <%= link_to_add_fields "Add Subtrip", f, :subtrips %> <br>

  To: 
    <%= collection_select :first_sub, :destination_id, City.all, :id, :name %><br>

  <%= f.input :detail %>
  <%= f.button :submit %>
<% end %>
