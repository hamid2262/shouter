<div id="new_trip_form" class="row col-md-8">
<div class="panel panel-default">
  <div class="panel-heading"><%= t('.title') %></div>
  <div class="panel-body">
    <%= simple_form_for(@trip) do |f| %>
      <%= error_messages_for(@trip) %>
     
     
     <b><%= t('.route') %></b>
      <div class="trip-route">
        <!-- Stopovers -->
        <%= f.simple_fields_for :subtrips do |s| %>
          <%= render 'subtrip_fields', f: s %>
        <% end %>  <!--  f.simple_fields_for :subtrips do |s|  -->
      </div> <!-- trip-route -->

      <!-- Total seats -->
      <div class="row">
        <div class="col-sm-3">
          <%= f.label :total_available_seats %>
        </div>  
        <div class="col-sm-2">        
           <%= f.select :total_available_seats, 1..@max_vehicle_seats, {selected: 4}, {class: "form-control"} %>
        </div>
      </div>
      
      <!-- currency -->
      <div class="row"> 
        <div class="col-sm-3">
          <%= f.label :currency %>
        </div>     
        <div class="col-sm-2">
          <%= f.association :currency, label: false, selected: 1, input_html: {class: "form-control"} %>
        </div>
      </div> 
      <!-- ladies_only -->
      <% if current_user.gender == 'f' %>
        <div class="row"> 
          <div class="col-sm-3">
            <%= f.label :ladies_only %>
          </div>     
          <div class="col-sm-2">
            <%= f.select :ladies_only, [[t('my_no'),0], [t('my_yes'),1]], { include_blank: false },class: "form-control" %>

          </div>
        </div>         
      <% end %>

      <!-- detail -->
      <div class="row"> 
        <div class="col-sm-3">
          <%= f.label :detail %>
        </div>     
        <div class="col-sm-9">
          <%= f.text_area :detail, class: "form-control col-sm-12" , rows: "3" %>
        </div>
      </div> 

      <!-- submit -->
      <div class="row">      
        <div class="col-sm-3 col-sm-offset-9">
          <%= f.submit class: "btn btn-warning btn pull-left" %>
        </div>
      </div>     
    <% end %>
    
  </div>  <!-- <div class="panel-body"> -->
</div>
</div>