<%= simple_form_for(@currency) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>
  <div class="form-inputs">
    <%= f.input :unit_price %>
  </div>
  <div class="form-inputs">
    <%= f.input :price_step %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
