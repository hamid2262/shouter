<hr>
<br>
<h3><%= t '.title' %></h3>
<table>
	<tbody>
		<tr>
			<th><%= t 'from' %></th>
			<td><%= @subtrip.origin %></td>
		</tr>
		<tr>
			<th><%= t 'to' %></th>
			<td><%= @subtrip.destination %></td>
		</tr>
		<tr>
			<th><%= t 'day' %></th>
			<td><%= @jalali_day %></td>
		</tr>
		<tr>
			<th><%= t 'mydate' %></th>
			<td>
				<%= @jalali_month %>
				<%= @jalali_day_num %> 
			</td>
		</tr>
		<tr>
			<th><%= t 'at' %></th>
			<td><%= @jalali_time %></td>
		</tr>
		<tr>
			<th><%= t 'price' %></th>
			<td><%= t('currency', amount: @subtrip.price, unit: @subtrip.trip.currency.try(:symbol) ) %></td>
		</tr>
	</tbody>
</table>
<hr>