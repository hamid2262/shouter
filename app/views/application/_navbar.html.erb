<div class="top_navbar navbar navbar-default  navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand visible-xs" href="#">
        <%= image_tag("#{IMAGES_PATH}logo-xs.gif") %>
      </a>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
  			<% if user_signed_in? %>
          <li><%= link_to  "", dashboard_path, class: "home" %></li>
          <%= render 'application/nav/profile' %>
          <%= render 'application/nav/my_trips' %>
          <%= render 'application/nav/my_network' %>
          <li><%= link_to current_user.name, profile_url(current_user), class: "name" %>  </li>
          <li class="link"><%= link_to gravatar(current_user, 32, "img-rounded"), profile_url(current_user) %>  </li>
  			<% else %>
          <li><%= link_to  "", root_path, class: "home" %></li>
          <%= render 'popup_signin' %>
          <li><%= link_to t("navbar.user.sign_up"), new_user_registration_path %></li>
  			<% end %>	
      </ul>

      <ul class="nav navbar-nav navbar-left">
        <li><%= link_to t("navbar.trip.insert"), trips_select_date_format_path %></li>
        <li><%= link_to t("navbar.trip.search"), search_search_subtrips_path %></li>

        <% if current_page?( locale: "fa") %>
          <li><%= link_to_unless_current t("navbar.language.english"), locale: "en" %></li>
        <% else %>
          <li><%= link_to_unless_current t("navbar.language.farsi"), locale: "fa" %></li>
        <% end %>
      </ul>     

    </div><!--/.nav-collapse -->
  </div>
</div>