<h1>Listing vehicles</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Color</th>
      <th>Number plate</th>
      <th>Air condition</th>
      <th>Year</th>
      <th>Image</th>
      <th>Vehicle model</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.user %></td>
        <td><%= vehicle.color %></td>
        <td><%= vehicle.number_plate %></td>
        <td><%= vehicle.air_condition %></td>
        <td><%= vehicle.year %></td>
        <td><%= vehicle.image %></td>
        <td><%= vehicle.vehicle_model %></td>
        <td><%= link_to 'Show', vehicle %></td>
        <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
        <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

