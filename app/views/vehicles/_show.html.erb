<div class="vehicle_show">
  <div class="panel panel-default clear">
    <div class="panel-heading"><h4><%= t '.car_details' %></h4></div>
    <div class="panel-body">
      <% if current_user %>
        <% if user.vehicle.present? %>
          <div id="vehicle_image">
            <%= link_to (image_tag user.vehicle.image.url(:normal)), user.vehicle.image.url(:original) %>
            <% if can? :edit, user.vehicle %>
              <%= simple_form_for(:vehicle, url: user_vehicles_path(user), html: { method: :put, class: "vehicle_upload_form" } ) do |f| %>
                <%= f.input :image, as: :file, label: false, input_html: { class: 'image_upload_button' } %>
                <%= f.button :submit, t("please_wait"), disabled: true, class: 'btn-primary image_upload_submit' %>
              <% end %>
            <% end %>
          </div>

          <div class="panel-body">
            <%= profile_sidebar_row Vehicle.human_attribute_name("color"),user.vehicle.color  %>
            <%= profile_sidebar_row t(".vehicle_brand"), user.vehicle.vehicle_model.try(:vehicle_brand).try(:name)  %>
            <%= profile_sidebar_row t(".vehicle_model"), user.vehicle.vehicle_model.try(:name)  %>

            <%= profile_sidebar_row Vehicle.human_attribute_name("number_plate"),user.vehicle.number_plate  %>
            <%= profile_sidebar_row Vehicle.human_attribute_name("air_condition"),t_has(user.vehicle.air_condition)  %>
            <%= profile_sidebar_row Vehicle.human_attribute_name("year"),user.vehicle.year.year  %>
          </div>         
          <% if user == current_user %>
            <%= link_to t('.edit_car_detail_btn'), edit_user_vehicles_path(user), class: "btn btn-warning" %>
          <% end %>           
        <% else %>
          <p><%= t('.there_is_no_car_registered.') %></p>
          <% if user == current_user %>
            <p><%= link_to t('.enter_car_detail_btn'), new_user_vehicles_path(user), class: "btn btn-warning" %></p>    
          <% end %>
        <% end %>  <!-- if user.vehicle.present? -->

      <% else %>
        <%= force_to_sign_in_message %>
      <% end %> <!-- if current_user -->
    </div>
  </div>  
</div>