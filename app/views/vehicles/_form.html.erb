<%= f.input :brand, collection: VehicleBrand.order(:name),  
      :prompt=>true ,input_html: {class: 'my-brand string optional form-control col-sm-7 required'} %> 

<%= f.input :vehicle_model_id, collection: VehicleBrand.order(:name), as: :grouped_select, group_method: :vehicle_models, class: 'required'  %>

<%= f.input :color %>

<%= f.input :number_plate  %>

<%= f.input :air_condition, collection: [[t('.has'), true],[t('.deesnt_have'),false]]  %>

<%= f.input :year, as: :date,
            start_year: Date.today.year - 70,
            end_year: Date.today.year, discard_day: true,
            order: [:year] %>
<%= f.input :image, as: :file %>
<%#= f.association :vehicle_model,
