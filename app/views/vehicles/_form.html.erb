  <%= f.input :color, input_html: { class: 'form-control' } %>
  <%= f.input :number_plate, input_html: { class: 'form-control' }  %>
  <%= f.input :air_condition %>
  <%= f.input :year, as: :date,
              input_html: { class: 'form-control' }, 
              start_year: Date.today.year - 40,
              end_year: Date.today.year, discard_day: true,
              order: [:year] %>
  <%= f.input :image, as: :file, input_html: { class: 'form-control' }  %>
  <%= f.association :vehicle_model, input_html: { class: 'form-control' },
              :label_method => lambda { |vehicle_model| "#{vehicle_model.vehicle_brand.name} | #{vehicle_model.name}" } %>
  <%= f.button :submit %>
