<% if session[:search_show_init_date].nil? || session[:search_show_init_date] != subtrip.date_time.day  %>

	<h4 class="subtrips-date">  
		<%= jday_humanize(subtrip.try(:date_time)) %> 
		<%= jdate_humanize_without_today(subtrip.try(:date_time)) %> 
	</h4>
		<%= render partial: 'subtrips/subtrip_search_row', locals: {subtrip: subtrip} %>
<% else %>
	<% if (session[:search_show_init_date] == subtrip.date_time.day) %>	
			<%= render partial: 'subtrips/subtrip_search_row', locals: {subtrip: subtrip} %> 
	<% end %>
<% end %>

<% session[:search_show_init_date] = subtrip.date_time.day %>
